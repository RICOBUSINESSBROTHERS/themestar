{% comment %}
  Section Testimonials optimisée pour thème Impact Shopify
  Témoignages clients avec défilement automatique
{% endcomment %}

{%- style -%}
  .testimonials-section {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
  }

  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    overflow: hidden;
  }

  .testimonials-title {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
    font-weight: 700;
    color: {{ section.settings.title_color }};
  }

  .testimonials-carousel {
    display: flex;
    gap: 2rem;
    animation: scroll {{ section.settings.scroll_speed }}s linear infinite;
  }

  .testimonial-card {
    min-width: 350px;
    background: {{ section.settings.card_background }};
    border: 2px solid {{ section.settings.border_color }};
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 35px rgba(0,0,0,0.15);
  }

  .testimonial-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .testimonial-photo {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid {{ section.settings.border_color }};
  }

  .testimonial-info h4 {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: {{ section.settings.name_color }};
  }

  .testimonial-stars {
    display: flex;
    gap: 2px;
    margin-top: 5px;
  }

  .star {
    width: 18px;
    height: 18px;
    fill: {{ section.settings.star_color }};
  }

  .testimonial-text {
    font-size: 1rem;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    font-style: italic;
    position: relative;
  }

  .testimonial-text:before {
    content: '"';
    font-size: 4rem;
    color: {{ section.settings.quote_color }};
    position: absolute;
    top: -20px;
    left: -10px;
    line-height: 1;
  }

  .testimonial-text:after {
    content: '"';
    font-size: 4rem;
    color: {{ section.settings.quote_color }};
    position: absolute;
    bottom: -30px;
    right: -10px;
    line-height: 1;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }

  .testimonials-carousel:hover {
    animation-play-state: paused;
  }

  @media (max-width: 768px) {
    .testimonial-card {
      min-width: 280px;
      padding: 1.5rem;
    }
    
    .testimonials-title {
      font-size: 2rem;
    }
    
    .testimonial-text {
      font-size: 0.9rem;
    }
  }
{%- endstyle -%}

<section class="testimonials-section">
  <div class="testimonials-container">
    {% if section.settings.title != blank %}
      <h2 class="testimonials-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="testimonials-carousel">
      {% comment %} Premier set de témoignages {% endcomment %}
      {% for block in section.blocks %}
        <div class="testimonial-card" {{ block.shopify_attributes }}>
          <div class="testimonial-header">
            {% if block.settings.customer_photo != blank %}
              <img src="{{ block.settings.customer_photo | img_url: '120x120' }}" 
                   alt="{{ block.settings.customer_name }}" 
                   class="testimonial-photo">
            {% else %}
              <div class="testimonial-photo" style="background: linear-gradient(45deg, {{ section.settings.border_color }}, {{ section.settings.star_color }}); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 1.2rem;">
                {{ block.settings.customer_name | slice: 0 }}
              </div>
            {% endif %}
            
            <div class="testimonial-info">
              <h4>{{ block.settings.customer_name }}</h4>
              <div class="testimonial-stars">
                {% for i in (1..5) %}
                  <svg class="star" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% endfor %}
              </div>
            </div>
          </div>
          
          <div class="testimonial-text">
            {{ block.settings.testimonial_text }}
          </div>
        </div>
      {% endfor %}

      {% comment %} Duplication pour effet défilement continu {% endcomment %}
      {% for block in section.blocks %}
        <div class="testimonial-card">
          <div class="testimonial-header">
            {% if block.settings.customer_photo != blank %}
              <img src="{{ block.settings.customer_photo | img_url: '120x120' }}" 
                   alt="{{ block.settings.customer_name }}" 
                   class="testimonial-photo">
            {% else %}
              <div class="testimonial-photo" style="background: linear-gradient(45deg, {{ section.settings.border_color }}, {{ section.settings.star_color }}); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 1.2rem;">
                {{ block.settings.customer_name | slice: 0 }}
              </div>
            {% endif %}
            
            <div class="testimonial-info">
              <h4>{{ block.settings.customer_name }}</h4>
              <div class="testimonial-stars">
                {% for i in (1..5) %}
                  <svg class="star" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% endfor %}
              </div>
            </div>
          </div>
          
          <div class="testimonial-text">
            {{ block.settings.testimonial_text }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials Carousel",
  "tag": "section",
  "class": "section-testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Ce que disent nos clients",
      "label": "Titre de la section"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "#ffffff",
      "label": "Couleur de fond"
    },
    {
      "type": "color",
      "id": "title_color",
      "default": "#333333",
      "label": "Couleur du titre"
    },
    {
      "type": "color",
      "id": "card_background",
      "default": "#ffffff",
      "label": "Couleur de fond des cartes"
    },
    {
      "type": "color",
      "id": "border_color",
      "default": "#e0e0e0",
      "label": "Couleur des bordures"
    },
    {
      "type": "color",
      "id": "star_color",
      "default": "#ffd700",
      "label": "Couleur des étoiles"
    },
    {
      "type": "color",
      "id": "name_color",
      "default": "#333333",
      "label": "Couleur des noms"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#666666",
      "label": "Couleur du texte"
    },
    {
      "type": "color",
      "id": "quote_color",
      "default": "#e0e0e0",
      "label": "Couleur des guillemets"
    },
    {
      "type": "range",
      "id": "scroll_speed",
      "min": 10,
      "max": 60,
      "step": 5,
      "default": 30,
      "label": "Vitesse de défilement (secondes)"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "label": "Padding haut (px)"
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "label": "Padding bas (px)"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Témoignage",
      "settings": [
        {
          "type": "image_picker",
          "id": "customer_photo",
          "label": "Photo du client"
        },
        {
          "type": "text",
          "id": "customer_name",
          "default": "Marie Dubois",
          "label": "Nom du client"
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "default": "Ce produit a complètement transformé mes matins ! Fini les coups de fatigue, j'ai enfin trouvé l'énergie naturelle que je cherchais.",
          "label": "Témoignage client"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials Carousel",
      "blocks": [
        {
          "type": "testimonial",
          "settings": {
            "customer_name": "Sophie Martin",
            "testimonial_text": "Révitalité a changé ma vie ! Fini les crashes de 15h, j'ai maintenant une énergie stable toute la journée. Je recommande à 100% !"
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "customer_name": "Thomas Leroux",
            "testimonial_text": "En tant qu'entrepreneur, j'avais besoin d'un boost sans les effets secondaires du café. Parfait ! Mon focus est au top et ma digestion apaisée."
          }
